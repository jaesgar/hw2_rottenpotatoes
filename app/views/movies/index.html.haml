-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1 ,(@ratings.key?(rating) && @ratings[rating])
  = submit_tag 'Refresh', :id=>"ratings_submit"
 
%table#movies
  %thead
    %tr
      %th{:class=> @sort_by=='title' && 'hilite'}= link_to "Movie Title", {:id=>'title_header' , :controller=>"movies", :sort_by=>"title"}
      %th Rating
      %th{:class=> @sort_by=='release_date' && 'hilite'}= link_to "Release Date", {:controller=>"movies", :id=>'release_date_header', :sort_by=>"release_date"}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
